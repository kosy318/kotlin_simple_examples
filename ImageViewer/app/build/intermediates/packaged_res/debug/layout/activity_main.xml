<?xml version="1.0" encoding="utf-8"?>
<!--data binding을 사용해보자-->

                                                               
                                                       
                                                   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity" android:tag="layout/activity_main_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
        <!-- android:orientation="vertical" : 덩어리를 세로로 나열-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center">
            <!--android:gravity="center" LinearLayout 안에서 사진을 가운데 정렬-->

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="700dp">
                <ImageView
                    android:id="@+id/image_1"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:src="@drawable/seoguri_1"
                    android:scaleType="centerCrop"/>
                <!-- android:scaleType="centerCrop" 사진 가운데에 맞춰 확대 + 자름 -->
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="700dp">
                <ImageView
                    android:id="@+id/image_2"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:src="@drawable/seoguri_2"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="700dp">
                <ImageView
                    android:id="@+id/image_3"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:src="@drawable/seoguri_3"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="700dp">
            <ImageView
                android:id="@+id/image_4"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:src="@drawable/seoguri_4"
                android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="700dp">
            <ImageView
                android:id="@+id/image_5"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:src="@drawable/seoguri_5"
                android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="700dp">
            <ImageView
                android:id="@+id/image_6"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:src="@drawable/seoguri_6"
                android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="700dp">
            <ImageView
                android:id="@+id/image_7"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:src="@drawable/seoguri_7"
                android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
         